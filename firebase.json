{
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run lint",
        "npm --prefix \"$RESOURCE_DIR\" run build"
      ]
    }
  ],
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "source": "website",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "targets": {
      "production": {
        "frameworksBackend": {
          "region": "us-central1"
        }
      },
      "staging": {
        "frameworksBackend": {
          "region": "us-central1"
        }
      }
    }
  },
  "remoteconfig": {
    "template": "remoteconfig.template.json"
  }
}